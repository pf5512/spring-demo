<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">
  
  <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
    <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
    <property name="url" value="jdbc:mysql://localhost:3306/spring3db"/>
    <property name="username" value="root"/>
    <property name="password" value="admin"/>
    <property name="initialSize" value="5"/>
    <property name="maxActive" value="10"/>
  </bean>
  
  <bean id="chirperDao" class="edu.buet.cse.spring.ch10.v4.dao.ChirperDaoImpl">
    <property name="dataSource" ref="dataSource"/>
  </bean>
  
  <bean id="chirperService" class="edu.buet.cse.spring.ch10.v4.service.ChirperServiceImpl">
    <constructor-arg ref="chirperDao"/>
  </bean>
  
  <!-- transaction related configuration -->
  <tx:annotation-driven/>
  
  <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="dataSource"/>
  </bean>
</beans>
                         